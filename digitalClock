#include<stdio.h>


int main(){

int hr=10;
int min=15;
int s=0;


while(1){





    printf("\t\t\t\n %02d : %02d : %02d",hr,min,s);

sleep(1);
system("cls");
s=s+1;
if(s==60){
    min=min+1;
    s=0;
}
else if(min==60){
    hr=hr+1;
    min=0;
    s=0;
}
else if(hr==12){
    hr=0;
    min=0;
    s=0;
}



}



    return 0;
}
